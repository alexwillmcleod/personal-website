---
import { Picture } from 'astro:assets';
import FormattedDate from './FormattedDate.astro';

interface Props {
  title: string;
  description?: string;
  href: string;
  src?: string;
  date: Date;
  authors: {
    name: string;
    profileIcon: string;
  }[]
}

const {
  title,
  href,
  description,
  src,
  date,
  authors = []
} = Astro.props;
---
<a href={href} class="w-full p-4 flex flex-row gap-2 bg-white rounded-xl">
  {src && <Picture class="w-80 rounded-xl" width={800} decoding="async" inferSize src={src} alt={title}/>}
  <div class="w-full flex-col gap-2">
    <p class="text-2xl text-primary font-display font-bold">{title}</p>
    <p class="text-xl">{description?.slice(0, 180)}</p>
    <p>{JSON.stringify(authors)}</p> 
    <p class="text-md"><FormattedDate date={date} /></p>
  </div>
</a>