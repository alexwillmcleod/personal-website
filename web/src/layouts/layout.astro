---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const {
  title,
  description,
  image,
}: Props = Astro.props;

import { Image, getImage } from 'astro:assets';
const TopographicImageSrc = 'Topographic 3.svg';
---

<!doctype html>
<html lang="en" class="h-screen">
	<head>
		<BaseHead title={title} description={description} image={image} />
	</head>

	<body class="max-h-screen relative w-screen overflow-x-hidden bg-slate-100">
		<Header />
		<main class="min-h-full w-screen static z-30">
      <slot />
      <img alt="Topographic Wallpaper" width={100} height={200} class="w-full absolute top-0 -z-10 opacity-70" src={TopographicImageSrc}/> 
    </main>
		<Footer/>
	</body>
</html>